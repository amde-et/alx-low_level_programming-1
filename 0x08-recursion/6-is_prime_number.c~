#include "main.h"
int _prime(int n, int i);
/**
 *is_prime_number-calculate
 *@n:int
 *Return:int
 */
int is_prime_number(int n)
{
if (n <= 1)
return (0);
return (_prime(n, i - 1));
}
/**
 *_prime- print i
 *@n:int
 *@i:int
 *Return:int 0
 */
int _prime(int n, int i)
{
if (i == 1)
return (1);
if (n % i == 0 && i > 0)
return (0);
return (_prime(n, i - 1));
}

